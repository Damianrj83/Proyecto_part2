# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page

GET		/crearRegistro		 		controllers.HomeController.crearRegistroGet()
POST	/crearRegistro	     		controllers.HomeController.crearRegistroPost()

GET		/crearSesion				controllers.HomeController.crearSesionGet()
POST	/crearSesion				controllers.HomeController.crearSesionPost()


GET     /                           controllers.HomeController.index
#GET     /estudiante                 controllers.HomeController.index

GET		/perfilProfesional			controllers.ProfesionalController.crearMainGet()

GET		/perfilEmpresa			    controllers.EmpresaController.crearMainEmpresaGet()	

GET		/curriculumPro				controllers.ProfesionalController.crearCurriculumGet()
POST	/curriculumPro				controllers.ProfesionalController.crearCurriculumPost()

GET		/mostrarCurriculum			controllers.ProfesionalController.mostrarCurriculum()




GET		/oferta						controllers.OfertaEmpresaController.crearOfertaGet()
POST	/oferta						controllers.OfertaEmpresaController.crearOfertaPost()

GET	    /cuenta						controllers.CuentaProfesionalController.crearConfigCuentaGet()
POST	/cuenta						controllers.CuentaProfesionalController.crearConfigCuentaPost()

GET		/oferta						controllers.OfertaEmpresaController.listarOfertas()


GET		/ofertaVer					controllers.OfertaEmpresaController.editarOfertaGet(id: Long)
POST	/ofertaVer					controllers.OfertaEmpresaController.editarOfertaPost(id: Long)	


GET		/editar/:id					controllers.ProfesionalController.editarCurriculumGet(id: Long)
POST	/editar/:id					controllers.ProfesionalController.editarCurriculumPost(id: Long)




#GET	/red						controllers.ProfesionalController.crearConfigRedGet()


GET		/descripcion				controllers.EmpresaController.crearDescripcionGet()	
POST   /descripcion					controllers.EmpresaController.crearDescripcionPost()	

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
